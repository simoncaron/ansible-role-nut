# {{ ansible_managed }}

{% for ups in nut_ups %}
MONITOR {{ ups.name }}@{{ nut_host }} {{ nut_powervalue }} {{ nut_user }} {{ nut_password }} {{ nut_role }}
{% endfor %}

{% if nut_upsmon_notifycmd | length > 0 %}
NOTIFYCMD {{ nut_upsmon_notifycmd }}
{% endif %}

{% for notif in nut_upsmon_notify %}
NOTIFYMSG {{ notif.name }}    "{{ notif.msg }}"
{% endfor %}

{% for notif in nut_upsmon_notify %}
NOTIFYFLAG {{ notif.name }}    "{{ notif.flag }}"
{% endfor %}

{% if (nut_upsmon_extra is defined) and nut_upsmon_extra %}
{{ nut_upsmon_extra }}
{% endif %}
